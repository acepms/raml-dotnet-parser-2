#%RAML 1.0 Library
usage: |
  Use to test traits in Library.
traits:
  filtered_by_month:
    description: The request is always filtered by year and month
    queryParameters:
      year:
        type: integer
        minimum: 2017
        maximum: 3000
        description: The year to filter by.
      month:
        type: integer
        minimum: 1
        maximum: 12
        description: The month to filter by.
securitySchemes:
  oauth_2_0:
      type: OAuth 2.0
      describedBy:
        headers:
          Authorization:
            description: |
              Used to send a valid OAuth 2 access token. Do not use together with
              the "access_token" queryParameters string parameter.
            type: string
        queryParameters:
          access_token:
            description: |
              Used to send a valid OAuth 2 access token. Do not use together with
              the "Authorization" header
            type: string
      settings:
        authorizationUri: https://localhost:8081/oauth/authorize
        accessTokenUri: https://localhost:8081/oauth/access_token
        authorizationGrants: [ authorization_code ]
        scopes:
          - read
          - write